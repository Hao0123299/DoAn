<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:layout_width="107dp"
            android:layout_height="23dp"
            android:text="Giải thuật"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:textSize="18sp" android:singleLine="false"
            android:textAllCaps="true" android:textIsSelectable="true" android:id="@+id/textView2"/>
    <TextView
            android:text="Nhập dãy số"
            android:layout_width="412dp"
            android:layout_height="24dp" android:id="@+id/tvNhap"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:textSize="18sp" android:textStyle="bold"/>
    <EditText
            android:layout_width="411dp"
            android:layout_height="37dp"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/txtNhap"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvNhap"/>
    <Button
            android:text="Button"
            android:layout_width="64dp"
            android:layout_height="64dp" android:id="@+id/button8"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/txtNhap"/>
    <Button
            android:text="Button"
            android:layout_width="96dp"
            android:layout_height="64dp" android:id="@+id/button9"
            app:layout_constraintStart_toEndOf="@+id/button8" app:layout_constraintTop_toBottomOf="@+id/txtNhap"/>
    <Button
            android:text="Button"
            android:layout_width="77dp"
            android:layout_height="65dp" android:id="@+id/button10"
            app:layout_constraintStart_toEndOf="@+id/button9"
            app:layout_constraintTop_toBottomOf="@+id/txtNhap"/>
    <Button
            android:text="Button"
            android:layout_width="84dp"
            android:layout_height="66dp" android:id="@+id/button11"
            app:layout_constraintStart_toEndOf="@+id/button10" app:layout_constraintTop_toBottomOf="@+id/txtNhap"/>
    <Button
            android:text="Button"
            android:layout_width="88dp"
            android:layout_height="65dp" android:id="@+id/button12"
            app:layout_constraintTop_toBottomOf="@+id/txtNhap" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:layout_width="410dp"
            android:layout_height="39dp" android:id="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/button10" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:text="Kết quả sau khi sắp xếp"/>
    <TextView
            android:layout_width="409dp"
            android:layout_height="48dp" android:id="@+id/tvKetqua"
            app:layout_constraintTop_toBottomOf="@+id/textView3" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>